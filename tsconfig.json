{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": false, //Allows us to compile ES6 modules to CommonJS modules
    "forceConsistentCasingInFileNames": true, //When set to true, enables case sensitive file naming
    "resolveJsonModule": true /* Enable importing .json files */,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
  },
  "include": ["api", "worker", "di", "model", "common", "service"]
}