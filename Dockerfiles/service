# syntax=docker/dockerfile:1
FROM node:19-alpine as build
WORKDIR /app
COPY ["package.json", "package-lock.json*", "./"]
RUN npm install
COPY . .  
RUN npx tsc

FROM node:19-alpine
WORKDIR /app
COPY --from=build app/node_modules ./node_modules/
COPY --from=build app/out ./dist/
CMD node dist/service/index.js

